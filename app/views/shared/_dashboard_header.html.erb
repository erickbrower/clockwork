<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to @app_title, blog_posts_path, class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <% @dashboard_items.each do |lbl, url| %>
          <% content = link_to lbl, url %>
          <%= request.url.include?(url) ? content_tag(:li, content, class: 'active') : content_tag(:li, content) %>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_person.email %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'My Profile <span class="glyphicon glyphicon-user pull-right"></span>'.html_safe, person_path(current_person) %></li>
          <li class="divider"></li>
          <li>
          <%= link_to 'Log out <span class="pull-right glyphicon glyphicon-log-out"></span>'.html_safe, destroy_session_path(current_person), method: :delete %>
          </li>
        </ul>
        </li>

      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
