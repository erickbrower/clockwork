<div class="blog-post-collapsed-partial">
  <div class="row">
    <div class="col-md-12">
      <span class="pull-right">
        <%= publish_button_with_dropdown blog_post %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="header">
        <h3><%= link_to blog_post.title, blog_post_path(blog_post) %></h3>
        <span class="blog-post-date">
          <%= blog_post_sub_header blog_post %>
        </span>
        <% if blog_post.tags.any? %>
          <span class="pull-right label tags">Tags <%= blog_post_tags_for blog_post %></span>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 blog-post-body">
      <%= blog_post.body_html.html_safe %>
      <br/>
      <br/>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <br />
      <br />
    </div>
  </div>
  <br />
  <br />
</div>

