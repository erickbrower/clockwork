<div class="blog-post-partial">
  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'blog_posts/admin_button', locals: { blog_post: blog_post, btn_group_class: 'pull-left' } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="header">
        <span class="pull-right blog-post-date"><%= blog_post.created_at %></span>
        <%= link_to "<h3>#{blog_post.title}</h3>".html_safe, blog_post_path(blog_post) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 blog-post-body">
      <%= blog_post.body_html.html_safe %>
      <br/>
      <br/>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-3">
          <span class="pull-left author-signature">- <em><%= blog_post.author.email %></em></span>
        </div>
        <div class="col-md-9">
          <div class="pull-right">
            <span class="label" style="color: #777777; font-size: 14px;">Tags</span><%= render_blog_post_tags(blog_post) %>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr>
    </div>
  </div>
  <br />
  <br />
</div>
