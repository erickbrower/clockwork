<% collapse_comments = true if collapse_comments.nil? %>

<div class="blog-post-partial">
  <div class="row">
    <div class="col-md-12">
      <%= publish_combo_button_for blog_post, btn_group_class: 'pull-right' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="header">
        <h3><%= blog_post_header_title_for blog_post %></h3>
        <span class="blog-post-date">
          <%= blog_post_sub_header_for blog_post %>
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 blog-post-body">
      <%= blog_post.body_html.html_safe %>
      <br/>
      <br/>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
    <% if blog_post.tags.any? %>
      <div class="pull-right">
        <span class="label tags">Tags</span><%= blog_post_tags_for blog_post %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <br />
      <br />
    </div>
  </div>
  <% unless collapse_comments %>
    <%= blog_post_comments_for blog_post %>
  <% end %>
  <br />
  <br />
</div>
