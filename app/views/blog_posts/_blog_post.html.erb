<div class="row">
  <div class="col-md-12">
    <div class="header" style="padding-left: 0px; padding-right: 0px;">
      <div class="btn-group pull-right">
        <% if blog_post.published? %>
          <% btn_class = 'btn-warning' %>
          <% btn_link = link_to 'Unpublish', '#', style: 'color: #ffffff;' %>
        <% else %>
          <% btn_class = 'btn-success' %>
          <% btn_link = link_to 'Publish', publish_blog_post_path(blog_post), style: 'color: #ffffff;' %>
        <% end %>
        <button type="button" class="btn <%= "#{btn_class}" %>" style="height: 34px;"><%= btn_link %></a></button>
        <button type="button" class="btn <%= "#{btn_class}" %> dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-cog"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Edit", edit_blog_post_path(blog_post) %></li>
          <li class="divider"></li>
          <li><%= link_to "Delete", blog_post_path(blog_post), method: :delete %></li>
        </ul>
      </div>
      <%= link_to "<h3 style='margin-top: 20px;padding-bottom: 0px;'>#{blog_post.title}</h3>".html_safe, blog_post_path(blog_post) %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12" style="margin-top: 20px;">
    <%= blog_post.body_html.html_safe %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <hr>
    <span class="pull-right" style="color: #777777;">- <em><%= blog_post.author.email %></em></span>
  </div>
</div>
