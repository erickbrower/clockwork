<div class="row">
  <div class="col-md-12">
    <div class="header" style='padding-left: 0px; padding-right: 0px;'>
      <ul class="nav nav-pills pull-right">
        <li class="active"> <%= link_to '<span class="glyphicon glyphicon-plus"></span> New Post'.html_safe, new_blog_post_path %> </li>
        <li> <%= link_to '<span class="glyphicon glyphicon-new-window"></span> View Blog'.html_safe, root_path %> </li>
      </ul>
      <h3> Manage Blog Posts </h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class='table table-hover table-condensed'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Created</th>
          <th>Edited</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody style="font-size: 14px;">
      <% @posts.each do |post| %>
        <tr>
        <td><strong><%= link_to post.title, blog_post_path(post) %></strong></td>
        <td><%= status_label(post) %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= edit_button(post) %>
          <%= delete_button(post) %>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>
