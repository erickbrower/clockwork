<div class='container-narrow'>
  <div class='header'>
    <ul class='nav nav-pills pull-right'>
      <li class='active'>
        <a href='#'>Home</a>
      </li>
      <li>
        <a href='#'>About</a>
      </li>
    </ul>
    <h3 class='text-muted'> Blog </h3>
  </div>
  <% @posts.each do |post| %>
  <div class='row-fluid'>
    <div class='col-lg-9'>
      <a href='#'><h4><%= post.title %></h4></a>
    </div>
    <div class='col-lg-3'>
      <span style='color: #999999; font-size: small' class='pull-right'><em>2013-01-23</em></span>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='col-lg-12'>
      <p>
        <%= post.body.html_safe %>
      </p>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='col-lg-12'>
      <br />
    </div>
  </div>
  <% end %>
</div>
