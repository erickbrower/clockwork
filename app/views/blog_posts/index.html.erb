<%= render 'shared/dashboard_header' %>

<div class="container" style="background-color: #f8f8f8; margin-top: 25px; border: 1px #e7e7e7 solid;">
  <div class="row-fluid">
    <div class="col-md-12">
      <div class="header" style='margin-top: 20px'>
        <ul class="nav nav-pills pull-right">
          <li class="active"> <%= link_to 'Write New Blog Post', new_blog_post_path %> </li>
        </ul>
        <h3> Manage Blog Posts </h3>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-md-12">
      <table class='table table-hover'>
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Created</th>
          <th>Edited</th>
          <th>Options</th>
        </tr>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, blog_post_path(post) %></td>
            <td><%= post.status %></td>
            <td><%= post.created_at %></td>
            <td><%= post.updated_at %></td>
            <td>
              <%= edit_button(post) %>
              <%= delete_button(post) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
