<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Created</th>
      <th>Edited</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  <% blog_posts.each do |post| %>
    <tr>
    <td><strong><%= link_to post.title, blog_post_path(post) %></strong></td>
    <td><%= status_label_for post %></td>
    <td><%= formatted_date_for post.created_at %></td>
    <td><%= formatted_date_for post.updated_at %></td>
    <td>
      <%= grid_edit_button_for post %>
      <%= grid_destroy_button_for post %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

