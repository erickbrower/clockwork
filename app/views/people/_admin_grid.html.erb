<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Email</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody style="font-size: 14px;">
  <% people.each do |person| %>
    <tr>
    <td><%= gravatar_for person, { size: 25 } %></td>
    <td><%= link_to person.email, person_path(person) %></td>
    <td><%= formatted_date_for person.created_at %></td>
    <td><%= formatted_date_for person.updated_at %></td>
    <td>
      <%= grid_edit_button_for person %>
      <%= grid_destroy_button_for person %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

