<!DOCTYPE html>
<html>
<head>
<title><%= @app_title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= yield :styles %>
</head>
<body id="<%= @page_id %>">
  <%= content_for?(:content) ? yield(:content) : yield %>

  <%= yield :scripts %>
</body>
</html>
